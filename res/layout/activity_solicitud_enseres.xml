<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".SolicitudEnseresActivity" >

    <!-- 
     Spinner con la clasificación de muebles y enseres por habitaciones
     -->
    <Spinner 
        android:id="@+id/spinner_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

     <!-- 
     	GridViewo con los items seleccionables
     -->
    <GridView
        android:id="@+id/GridView_items"
        android:layout_width="match_parent"
        android:numColumns="4"
        android:layout_height="0dp"
        android:verticalSpacing="5dp"
        android:horizontalSpacing="5dp"
        android:layout_weight="1"></GridView>
	
    <!--
    Botón para continuar con el proceso de Solicitud de Recogida
    -->
	<Button
	    android:id="@+id/buttonContinuar"
	   	android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical" 
	    android:layout_gravity="center_horizontal|center"    	
	    android:text="@string/title_solicitud"
	    android:layout_weight="1" />

</LinearLayout>
